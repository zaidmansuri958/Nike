<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Detail"
    android:background="@color/teal_700">



    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:elevation="20dp"
        app:cardCornerRadius="20dp"
        android:backgroundTint="#cdcdcd">
        <TextView
            android:id="@+id/detail_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:fontFamily="@font/chakra_petch_bold_italic"
            android:gravity="center"
            android:text="Shoes name"
            android:textColor="@color/white"
            android:textSize="48sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/detail_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/shoes"
            android:rotation="-30"/>

    </androidx.cardview.widget.CardView>



    <RadioGroup
        android:id="@+id/radio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="10dp"
        >

        <RadioButton
            android:id="@+id/seven"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="7"
            android:textSize="20sp"
            android:layout_marginLeft="30dp"
            android:gravity="center"
            android:background="@drawable/radiostatus"
            android:button="@drawable/football_btn"
            android:padding="10dp"
            android:textStyle="bold"
            android:textColor="@color/teal_700"
            android:elevation="10dp"
            android:fontFamily="@font/chakra_petch_bold_italic"/>

        <RadioButton
            android:id="@+id/eight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="8"
            android:textSize="20sp"
            android:layout_marginLeft="30dp"
            android:button="@drawable/football_btn"
            android:background="@drawable/radiostatus"
            android:elevation="10dp"
            android:gravity="center"
            android:padding="10dp"
            android:textStyle="bold"
            android:textColor="@color/teal_700"
            android:fontFamily="@font/chakra_petch_bold_italic"/>

        <RadioButton
            android:id="@+id/nine"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="9"
            android:textSize="20sp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:button="@drawable/football_btn"
            android:background="@drawable/radiostatus"
            android:gravity="center"
            android:padding="10dp"
            android:textStyle="bold"
            android:elevation="10dp"
            android:textColor="@color/teal_700"
            android:fontFamily="@font/chakra_petch_bold_italic"/>

    </RadioGroup>

    <TextView
        android:id="@+id/detail_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buy"
        android:fontFamily="@font/chakra_petch_bold_italic"
        android:gravity="center"
        android:text="Shoes price"
        android:textColor="#cdcdcd"
        android:textSize="36sp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"/>


    <Button
        android:id="@+id/buy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bottom_shape"
        android:fontFamily="@font/chakra_petch_bold_italic"
        android:src="@drawable/bottom_shape"
        android:text="Buy now"
        android:textColor="@color/teal_700"
        android:textSize="20sp"
        android:textStyle="bold"
        />


</RelativeLayout>